<%- include('./includes/headers.ejs') %> 
        <form action="/library/add" method="POST">
            <div class="form-signin">
                <h2 class="form-signin-heading">Add book</h2>
                <label for="title">Title</label>
                <input type="text" 
                name="bookName" 
                id="bookName" 
                placeholder="Book Name"
                class="form-control mb-2" required autofocus>
                <label for="text">ImageUrl</label>
                <input type="text"
                placeholder="ImageUrl"
                name="bookImage" id="bookImage" class="form-control mb-2" required>
                <label for="author">Author</label>
                <input type="text"
                name="author" id="author"
                class="form-control mb-2" required>
                <label for="genre">Genre</label>
                <input type="text"
                name="genre" id="genre" 
                class="form-control mb-2" required>
                <label for="releaseDate">Release Date</label>
                <input type="text" placeholder="eg. Apr 11, 2020"
                name="releaseDate" id="releaseDate" 
                class="form-control mb-2" required>
                <label for="active">Activate</label>
                <input type="text"
                name="active" id="active" placeholder="true/false"
                class="form-control mb-2" required>
                <button class="btn btn-lg btn-primary btn-block" type="submit">
                    Add book
                </button>
            </div>   
        </form>
        <%- include('./includes/footer.ejs') %>